%h1 Login

= form_tag login_create_path do

  = label :user, :user_id, 'User Id'
  = text_field :user, 'user_id', :id => 'login_user'

  = label :user, :email, 'Email'
  = text_field :user, 'email', :id => 'login_email'

  =button_to( "Log In", login_create_path, :method => :post,:id => 'login_submit')
  =link_to("Sign Up For an Account", users_path, :id => 'signup')